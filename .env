# ============================================================================
# DEAL SCOUT - DEVELOPMENT ENVIRONMENT CONFIGURATION
# ============================================================================
# Use this file for local development only
# For production, use .env.production as template and use secure secrets management
# ============================================================================

# Core Application Settings
APP_TIMEZONE=America/Los_Angeles
DEFAULT_CITY="San Jose, CA"
DEFAULT_RADIUS_MI=50
FREE_PRIORITY=true
DEMO_MODE=true
LOG_LEVEL=INFO
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Database (Development - uses docker postgres)
DATABASE_URL=postgresql+psycopg://deals:deals@postgres:5432/deals
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Database Connection (for startup/entrypoint and Postgres container)
DB_HOST=postgres
DB_PORT=5432
POSTGRES_DB=deals
POSTGRES_USER=deals
POSTGRES_PASSWORD=deals

# Redis (Development - uses docker redis)
REDIS_URL=redis://redis:6379/0
REDIS_SOCKET_TIMEOUT=5

# AI Services (Optional - leave empty for demo mode)
OPENAI_API_KEY=
VISION_ENABLED=true
REMBG_ENABLED=true

# eBay Configuration (Use Sandbox for testing)
EBAY_ENV=sandbox
EBAY_CLIENT_ID=
EBAY_CLIENT_SECRET=
EBAY_REDIRECT_URI=http://localhost:8000/integrations/ebay/callback
EBAY_MARKETPLACE_ID=EBAY_US

# Craigslist Configuration
CL_REGION=sfbay
CL_SEARCH_FURN=sss
CL_ENABLE_FREE=true

# Email Configuration (Development - uses MailHog)
EMAIL_FROM=alerts@local.test
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USE_TLS=false

# Discord Notifications (Optional)
DISCORD_WEBHOOK_URL=

# Twilio SMS (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=
ALERT_SMS_TO=

# Seller/Snap Studio
LEGAL_MODE=api_only
HEADLESS_ENABLED=false
PRICE_SUGGESTION_MODE=ebay_only
BUYER_AUTO_MESSAGE=true

# Cloud Storage (Optional)
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=
S3_IMAGE_PREFIX=images/

# Monitoring
SENTRY_DSN=

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
