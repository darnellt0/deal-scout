# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION - DEAL SCOUT
# ============================================================================
# SECURITY WARNING: This file contains sensitive credentials.
# - Never commit actual values to version control
# - Use environment-specific secret management (AWS Secrets Manager, etc.)
# - Rotate all API keys regularly
# - Keep backups of this file in a secure location
# ============================================================================

# Core Application Settings
APP_TIMEZONE=America/Los_Angeles
DEFAULT_CITY="San Jose, CA"
DEFAULT_RADIUS_MI=50
FREE_PRIORITY=true
DEMO_MODE=false
NEXT_PUBLIC_API_BASE_URL=https://api.elevatedmovements.com

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Format: postgresql+psycopg://user:password@host:port/database
# For production, use managed PostgreSQL (AWS RDS, Google Cloud SQL, etc.)
DATABASE_URL=postgresql+psycopg://CHANGEME:CHANGEME@postgres:5432/deals

# ============================================================================
# CACHE & MESSAGE BROKER (Redis)
# ============================================================================
# Format: redis://[:password]@host:port/db
# For production, use managed Redis (AWS ElastiCache, Google Cloud Memorystore)
# IMPORTANT: Set a strong password for Redis in production
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION_USE_STRONG_PASSWORD
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# ============================================================================
# AI & VISION SERVICES
# ============================================================================
# OpenAI API Key (required for image analysis and copy generation)
OPENAI_API_KEY=
VISION_ENABLED=true
REMBG_ENABLED=true

# ============================================================================
# MARKETPLACE INTEGRATIONS
# ============================================================================

# eBay Configuration
EBAY_ENV=production               # sandbox|production
EBAY_APP_ID=CHANGEME
EBAY_CERT_ID=CHANGEME
EBAY_DEV_ID=CHANGEME
EBAY_OAUTH_TOKEN=CHANGEME
EBAY_REFRESH_TOKEN=CHANGEME
EBAY_REDIRECT_URI=https://your-domain.com/ebay/callback
EBAY_SCOPE="https://api.ebay.com/oauth/api_scope https://api.ebay.com/oauth/api_scope/sell.inventory https://api.ebay.com/oauth/api_scope/sell.account https://api.ebay.com/oauth/api_scope/sell.marketing https://api.ebay.com/oauth/api_scope/sell.fulfillment"
EBAY_MARKETPLACE_ID=EBAY_US

# Craigslist Configuration
CL_REGION=sfbay
CL_SEARCH_FURN=sss
CL_ENABLE_FREE=true

# ============================================================================
# NOTIFICATION CHANNELS
# ============================================================================

# Email Configuration
# Use production SMTP service (SendGrid, AWS SES, Mailgun, etc.)
EMAIL_FROM=alerts@your-domain.com
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
# For SendGrid: SMTP_USER=apikey, SMTP_PASSWORD=SG.xxx...
SMTP_USER=CHANGEME
SMTP_PASSWORD=CHANGEME

# Discord Webhook (optional)
# Format: https://discord.com/api/webhooks/WEBHOOK_ID/WEBHOOK_TOKEN
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/CHANGEME/CHANGEME

# Twilio SMS (optional)
TWILIO_ACCOUNT_SID=CHANGEME
TWILIO_AUTH_TOKEN=CHANGEME
TWILIO_FROM=+1CHANGEME
ALERT_SMS_TO=+1CHANGEME

# ============================================================================
# SELLER/SNAP STUDIO CONFIGURATION
# ============================================================================
LEGAL_MODE=api_only              # api_only|guided|off
HEADLESS_ENABLED=false
PRICE_SUGGESTION_MODE=ebay_only  # ebay_only|ebay_live|all
BUYER_AUTO_MESSAGE=true

# ============================================================================
# DATA & TEMPLATES
# ============================================================================
TEMPLATE_DIR=/app/data/templates
STATIC_DATA_DIR=/app/data

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-project@sentry.io/CHANGEME

# ============================================================================
# S3/CLOUD STORAGE (for image persistence)
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGEME
AWS_SECRET_ACCESS_KEY=CHANGEME
S3_BUCKET=deal-scout-production
S3_IMAGE_PREFIX=images/
